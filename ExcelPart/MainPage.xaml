<UserControl 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
    xmlns:ExcelPart="clr-namespace:ExcelPart"
    xmlns:Controls="clr-namespace:excel_create.Controls" x:Class="ExcelPart.MainPage"
    mc:Ignorable="d"
    d:DesignHeight="300" d:DesignWidth="400">

    <Grid x:Name="LayoutRoot" Background="White" Margin="0,0,-457,-965">
        <StackPanel>
            <Controls:PPLPicker Title="Single Selection Demo" AllowMultiple="False"  x:Name="first" HorizontalAlignment="Left" Margin="10,475,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.362,0.478" Height="590"/>
        <Controls:PPLPicker Title="Multiple Selection Demo"  x:Name="second" AllowMultiple="True" HorizontalAlignment="Left" VerticalAlignment="Top" Height="615" Closed="second_Closed" Margin="10,621,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
